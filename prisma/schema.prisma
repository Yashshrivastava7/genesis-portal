generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model NewEvent {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  title    String
  location String
  date     String
  content  String
  capacity Int
}

model Event {
  id      String @id @default(auto()) @map("_id") @db.ObjectId
  author  String
  content String
  title   String
}

model User {
  id       String  @id @default(auto()) @map("_id") @db.ObjectId
  email    String  @unique
  name     String
  password String
  role     String?
}

model Registration {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  user  String
  event String
}
